<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Card styles -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primary_light</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text styles -->
    <style name="AppTextHeading">
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTextSubheading">
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AppTextBody">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Theme.MaterialComponents.Dialog.MinWidth" parent="Theme.MaterialComponents.Dialog">
        <item name="windowMinWidthMajor">300dp</item>
        <item name="windowMinWidthMinor">300dp</item>
        <item name="android:windowMinWidthMajor">300dp</item>
        <item name="android:windowMinWidthMinor">300dp</item>
    </style>

    <style name="Widget.EmperorChess.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/emperor_primary</item>
    </style>

    <style name="Widget.EmperorChess.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/emperor_primary</item>
    </style>

    <style name="Widget.EmperorChess.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/emperor_primary</item>
        <item name="hintTextColor">@color/emperor_primary</item>
    </style>

    <style name="Widget.EmperorChess.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/emperor_primary</item>
        <item name="hintTextColor">@color/emperor_primary</item>
    </style>

    <!-- Base Dialog Style -->
    <style name="EmperorDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@color/emperor_background</item>
        <item name="colorPrimary">@color/emperor_primary</item>
        <item name="colorPrimaryDark">@color/emperor_primary_dark</item>
        <item name="colorAccent">@color/emperor_accent</item>
        <item name="colorSecondary">@color/emperor_accent</item>
        <item name="colorSecondaryVariant">@color/emperor_accent_dark</item>
        <item name="android:textColorPrimary">@color/emperor_text</item>
        <item name="android:textColorSecondary">@color/emperor_text_secondary</item>
    </style>

    <!-- Input Field Style -->
    <style name="EmperorInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/emperor_primary</item>
        <item name="hintTextColor">@color/emperor_primary</item>
        <item name="android:textColorHint">@color/emperor_text_secondary</item>
        <item name="boxBackgroundColor">@color/emperor_background</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Button Style -->
    <style name="EmperorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/emperor_background</item>
        <item name="backgroundTint">@color/emperor_primary</item>
        <item name="rippleColor">@color/emperor_button_ripple</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Text Button Style -->
    <style name="EmperorTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/emperor_primary</item>
        <item name="rippleColor">@color/emperor_button_ripple</item>
    </style>

    <!-- Card Style -->
    <style name="EmperorCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/emperor_card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/emperor_divider</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>